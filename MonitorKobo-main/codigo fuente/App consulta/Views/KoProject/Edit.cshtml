@model App_consulta.Models.KoProject
@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Proyectos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Editar proyecto</h4>
<hr class="mt-0" />
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="small text-danger"></div>
    <input asp-for="Id" type="hidden" />

    @await Html.PartialAsync("_PartialForm")
    <hr />

    <div class="form-group row">
        <label asp-for="LastUpdate" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input readonly value="@Model.LastUpdate" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 offset-lg-3">
            <input type="submit" value="Guardar" class="btn btn-outline-primary btn-block mb-2" />
        </div>
        <div class="col-sm-3">
            <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
        </div>
    </div>

</form>