@model App_consulta.Models.KoProject
@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Proyectos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Editar proyecto</h4>
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="small text-danger"></div>

    <div class="form-group row">
        <label asp-for="Name" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="form-text small text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Field" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="Field" class="form-control" />
            <span asp-validation-for="Field" class="form-text small text-danger"></span>
        </div>
    </div>

    <hr />
    <div class="form-group row row">
        <div class="col-sm-9 offset-3">
            <div class="custom-control custom-switch">
                <input class="custom-control-input" asp-for="Validable" />
                <label asp-for="Validable" class="custom-control-label"></label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ValidationName" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="ValidationName" class="form-control" />
            <span asp-validation-for="ValidationName" class="form-text small text-danger"></span>
        </div>
    </div>

    <hr />
    <div class="form-group row">
        <label asp-for="KoboKpiUrl" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="KoboKpiUrl" class="form-control" />
            <span asp-validation-for="KoboKpiUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="KoboAssetUid" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="KoboAssetUid" class="form-control" />
            <span asp-validation-for="KoboAssetUid" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="KoboApiToken" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="KoboApiToken" class="form-control" />
            <span asp-validation-for="KoboApiToken" class="text-danger"></span>
        </div>
    </div>

    <hr />

    <div class="form-group row">
        <label asp-for="KoboAttachment" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="KoboAttachment" class="form-control" />
            <span asp-validation-for="KoboAttachment" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="KoboUsername" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="KoboUsername" class="form-control" />
            <span asp-validation-for="KoboUsername" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 offset-lg-3">
            <input type="submit" value="Guardar" class="btn btn-outline-primary btn-block mb-2" />
        </div>
        <div class="col-sm-3">
            <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
        </div>
    </div>

</form>